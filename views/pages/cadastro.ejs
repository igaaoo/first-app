<%- contentFor( 'body') %>

<style>
    div h2{
        margin-top: 20px;
    }
</style>
<div class="table-responsive-xl ">
    <h2>Cadastrar Novo Usuário</h2>
    <p>Preencha os dados para cadastrar um novo usuário</p>
    <form action="/cadastro/add" method="post" style="margin-bottom: 20px;">
        <div class="form-group">
            <label for="_name">Nome:</label>
            <input type="text" name="_name" id="_name" class="form-control" placeholder="Ex: Igor Neves">
        </div>
        <div class="form-group">
            <label for="_email">E-mail:</label>
            <input type="text" name="_email" id="_email" class="form-control" placeholder="Ex: igor123@gmail.com">
        </div>
        <div class="form-group">
            <label for="_address">Endereço:</label>
            <input type="text" name="_address" id="_address" class="form-control" placeholder="Ex: Rua Brasil, 540">
        </div>
        <div class="form-group">
            <label for="_heigth">Altura:</label>
            <input type="text" name="_heigth" id="_heigth" class="form-control" placeholder="Ex: 1.75">
        </div>
        <div class="form-group">
            <label for="_age">Idade:</label>
            <input type="text" name="_age" id="_age" class="form-control" placeholder="Ex: 19">
        </div>
        <div class="form-group">
            <label for="_vote">Votou:</label>
            <input type="text" name="_vote" id="_vote" class="form-control" placeholder="Ex: true/false">
        </div>
        <div class="form-group">
            <input type="submit" value="Enviar"  class="btn btn-primary">
        </div>
    </form>
    
</div>